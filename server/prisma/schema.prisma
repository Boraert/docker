datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  campaignDetails CampaignDetail[]
  campaigns       Campaign[]
  companyDetails  CompanyDetail[]
  createdAt       DateTime         @default(now())
  firstName       String?
  id              String           @id @default(cuid())
  lastName        String?
  password        String
  roles           Json
  statistics      Statistic[]
  updatedAt       DateTime         @updatedAt
  username        String           @unique
}

model Campaign {
  campaignDuration String?
  campaignHeadline String
  createdAt        DateTime @default(now())
  description      String?
  id               String   @id @default(cuid())
  images           String?
  quantity         Int?
  updatedAt        DateTime @updatedAt
  user             User?    @relation(fields: [userId], references: [id])
  userId           String?
  value            String?
}

model CampaignDetail {
  bought              Int?
  char                Json?
  createdAt           DateTime  @default(now())
  description         String?
  hoursMinutesSeconds DateTime?
  id                  String    @id @default(cuid())
  interactionRate     Int?
  redeemed            Int?
  saved               Int?
  totalSales          Int?
  updatedAt           DateTime  @updatedAt
  user                User?     @relation(fields: [userId], references: [id])
  userId              String?
  websiteTraffic      Int?
}

model Statistic {
  boughtDeals     Int?
  createdAt       DateTime  @default(now())
  id              String    @id @default(cuid())
  month           DateTime? @unique
  updatedAt       DateTime  @updatedAt
  user            User?     @relation(fields: [userId], references: [id])
  userId          String?
  websiteVisitors Int?
}

model CompanyDetail {
  approvalStatus  Boolean?
  businessAddress String?
  createdAt       DateTime @default(now())
  id              String   @id @default(cuid())
  updatedAt       DateTime @updatedAt
  user            User[]
}
