datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  boughtDeals     BoughtDeal[]
  campaignDetails CampaignDetail[]
  campaigns       Campaign[]
  createdAt       DateTime         @default(now())
  firstName       String?
  id              String           @id @default(cuid())
  lastName        String?
  password        String
  roles           Json
  updatedAt       DateTime         @updatedAt
  username        String           @unique
}

model Campaign {
  campaignDuration String?
  campaignHeadline String
  createdAt        DateTime @default(now())
  description      String?
  id               String   @id @default(cuid())
  images           String?
  quantity         Int?
  updatedAt        DateTime @updatedAt
  user             User?    @relation(fields: [userId], references: [id])
  userId           String?
  value            String?
}

model CampaignDetail {
  bought              Int?
  char                Json?
  createdAt           DateTime  @default(now())
  description         String?
  hoursMinutesSeconds DateTime?
  id                  String    @id @default(cuid())
  interactionRate     Int?
  redeemed            Int?
  saved               Int?
  totalSales          Int?
  updatedAt           DateTime  @updatedAt
  user                User?     @relation(fields: [userId], references: [id])
  userId              String?
  websiteTraffic      Int?
}

model BoughtDeal {
  april     Int?
  august    Int?
  createdAt DateTime @default(now())
  december  Int?
  february  Int?
  id        String   @id @default(cuid())
  january   Int?
  july      Int?
  june      Int?
  march     Int?
  may       Int?
  november  Int?
  october   Int?
  september Int?
  updatedAt DateTime @updatedAt
  user      User[]
}
